<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/bg_box"
    android:orientation="vertical"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/box_market"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/animals_ico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/disneycomic"
                    android:text="Animal"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/disneycomic"

                    android:shadowColor="@android:color/white"
                    android:text="items:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/count_animal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/disneycomic"
                    android:gravity="center"
                    android:hint="quantity"
                    android:inputType="number"

                    android:shadowColor="@android:color/white"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_buy_animal"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/buy_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Buy $60"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"

                    />

                <Button

                    android:id="@+id/btn_sell_animal"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/sell_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Sell $40"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/box_market"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/medicine_ico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/disneycomic"
                    android:text="Medicine"
                    android:textColor="@android:color/white"

                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"

                    android:text="items:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/count_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_marginRight="50dp"

                    android:layout_weight="1"
                    android:fontFamily="@font/disneycomic"
                    android:gravity="center"
                    android:hint="quantity"

                    android:inputType="number"
                    android:shadowColor="@android:color/white"

                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </EditText>

                <Button

                    android:id="@+id/btn_buy_medicine"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/buy_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Buy $ 15"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn_sell_medicine"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/sell_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Sell $ 12"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/box_market"
                android:gravity="center">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/food_ico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/disneycomic"
                    android:text="Food"
                    android:textColor="@android:color/white"

                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/disneycomic"

                    android:shadowColor="@android:color/white"
                    android:text="items:"
                    android:textColor="@android:color/white"

                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/count_food"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/disneycomic"

                    android:gravity="center"
                    android:hint="quantity"

                    android:inputType="number"
                    android:shadowColor="@android:color/white"

                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </EditText>

                <Button

                    android:id="@+id/btn_buy_food"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/buy_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Buy $ 7"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn_sell_food"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/sell_btn"
                    android:fontFamily="@font/disneycomic"
                    android:shadowColor="@android:color/white"
                    android:text="Sell $ 5"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/tite"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/market_btn" />


    <Button
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/close_btn" />


</RelativeLayout>