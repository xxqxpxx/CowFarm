<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".View.HomeActivty">


    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bar"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/txt_money_count"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingRight="11dp"
                android:text="100"
                android:textColor="@color/DarkYello"
                android:textSize="10sp"
                android:background="@drawable/box" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/food_ico" />

            <TextView
                android:id="@+id/txt_food_count"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingRight="11dp"
                android:text="100"

                 
                android:textColor="@color/DarkYello"
                android:textSize="10sp"
                android:background="@drawable/box"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/medicine_ico" />

            <TextView
                android:id="@+id/txt_medicine_count"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingRight="11dp"
                android:text="100"

                android:textColor="@color/DarkYello"
                android:textSize="10sp"
                android:background="@drawable/box" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_animals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/animals_ico" />

            <TextView
                android:id="@+id/txt_animals_count"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingRight="11dp"
                android:text="100"

                android:textColor="@color/DarkYello"
                android:textSize="10sp"
                android:background="@drawable/box"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/profile" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/img_resources"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/resources_click"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:gravity="end"
        >

        <ImageView
            android:id="@+id/img_market"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/market_btn"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY"

            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_farm"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"
            android:src="@drawable/farm_img"
            />

        <TextView
            android:id="@+id/farmlevel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/img_farm"
            android:layout_alignParentBottom="true"
            android:text="Level: "
            android:layout_marginRight="10dp"
            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"
            android:layout_alignRight="@+id/img_farm" />

        <TextView
            android:id="@+id/farm_count_level"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/farmlevel"
            android:layout_alignRight="@+id/img_farm"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:text="1"
            android:textColor="@color/brown"
                android:shadowColor="@android:color/black" />


        <ImageView
            android:id="@+id/img_requests"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/requests"
            android:layout_alignParentRight="true" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_stock"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"

            android:scaleType="fitXY"
            android:src="@drawable/stockyard_img" />

        <TextView
            android:id="@+id/stocklevel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/img_stock"
            android:layout_alignParentBottom="true"
            android:text="Level: "
            android:layout_marginRight="10dp"

            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"
            android:layout_alignRight="@+id/img_stock" />

        <TextView
            android:id="@+id/stock_level_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/stocklevel"
            android:layout_alignRight="@+id/img_stock"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:text="1"
            android:textColor="@color/brown"
            android:shadowColor="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_factory"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"

            android:src="@drawable/factory_img"
            />

        <TextView
            android:id="@+id/factorylevel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/img_factory"
            android:layout_alignParentBottom="true"
            android:text="Level: "
            android:layout_marginRight="10dp"

            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"
            android:layout_alignRight="@+id/img_factory" />

        <TextView
            android:id="@+id/factorylevelcount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/factorylevel"
            android:layout_alignRight="@+id/img_factory"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:text="1"
            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_hospital"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/hospital_img"
            />

        <TextView
            android:id="@+id/hospitallevel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/img_hospital"
            android:layout_alignParentBottom="true"
            android:text="Level: "
            android:layout_marginRight="10dp"

            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"
            android:layout_alignRight="@+id/img_hospital" />

        <TextView
            android:id="@+id/hospital_level_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/hospitallevel"
            android:layout_alignRight="@+id/img_hospital"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:text="1"

            android:textColor="@color/brown"
            android:shadowColor="@android:color/black"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >


    <ImageView
        android:id="@+id/btn_water"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/wateroff"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        />


        <ImageView
            android:id="@+id/btn_electricity"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/electricityoff"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/btn_doctors"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/doctorsoff"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/btn_farmers"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/farmersoff"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/btn_workers"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/workersoff"
            android:scaleType="fitCenter"
            />


    </LinearLayout>

</LinearLayout>